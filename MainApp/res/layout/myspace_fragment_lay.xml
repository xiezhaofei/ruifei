<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/basetitle"/>

    <RelativeLayout
        android:id="@+id/rel_lay"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/oval_background_shape"
        >

        <RelativeLayout
            android:id="@+id/rel_lay1"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text1"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="用户名："
                />
            <EditText
                android:layout_toRightOf="@+id/text1"
                android:layout_centerVertical="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_lay2"
            android:layout_below="@+id/rel_lay1"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/text2"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="密    码："
                />
            <EditText
                android:layout_toRightOf="@+id/text2"
                android:layout_centerVertical="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="textPassword"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"

                />

        </RelativeLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/rel_lay2"
            android:src="@drawable/login_btn_d"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />


    </RelativeLayout>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还没有账号？"
        android:layout_below="@+id/rel_lay"
        android:layout_alignLeft="@+id/rel_lay"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/sig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_lay"
        android:layout_toRightOf="@+id/text3"
        android:text="注册"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textColor="#ff0101"
        />

</RelativeLayout>